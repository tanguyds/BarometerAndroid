<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nalu.barometer.dashboard.BarometerActivity"
    tools:layout_editor_absoluteY="81dp">

    <!-- tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="4dp"-->

    <ListView
        android:id="@+id/lvBarometer"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="11dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="10dp"
        android:listSelector="@color/colorNalu"
        app:layout_constraintBottom_toTopOf="@+id/btnLogoff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOverzichtBarometers" />

    <Button
        android:id="@+id/btnLogoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginBottom="34dp"
        android:background="@color/colorNalu"
        android:text="@string/log_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvBarometer" />

    <TextView
        android:id="@+id/tvOverzichtBarometers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorNalu"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/lvBarometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
